{
    "name": "Dropshipping Tool",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Auto fill order detail fields",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Dropshipping Tool",
        "default_icon": {   
          "16":"/assets/images/logo.png",
          "24":"/assets/images/logo.png",
          "32":"/assets/images/logo.png",
          "128":"/assets/images/logo.png"                    
      }
    },
    "permissions":[
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://dsm.commercehub.com/*",
        "http://crm.saffronfabs.com/*"
    ],
    "icons": {                    
      "16":"/assets/images/logo.png",
      "24":"/assets/images/logo.png",
      "32":"/assets/images/logo.png",
      "128":"/assets/images/logo.png"
    }
}