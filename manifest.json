{
    "name": "Dropshipping Tool",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "extension",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Dropshipping Tool",
        "default_icon": {   
          "16":"/assets/images/logo.png",
          "24":"/assets/images/logo.png",
          "32":"/assets/images/logo.png",
          "128":"/assets/images/logo.png"                    
      }
    },
    "content_scripts": [
     
  
      ],
    "permissions":[
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8000/new2.html",
        "<all_urls>",
        "http://crm.saffronfabs.com/*"
    ],
    "icons": {                    
      "16":"/assets/images/logo.png",
      "24":"/assets/images/logo.png",
      "32":"/assets/images/logo.png",
      "128":"/assets/images/logo.png"
    }
}